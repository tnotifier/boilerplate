{
    "compilerOptions": {
        "declaration": false,
        "module": "esnext",
        "target": "es2017",
        "lib": ["es6", "dom", "es2016", "es2017"],
        "sourceMap": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "paths": {
            "*": ["./*.d.ts"],
            "~/*": ["./src/*"],
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
